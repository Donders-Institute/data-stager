h1= title_request
p Send staging requests by selecting source and destination from the panel below.

div.modal.fade#job_confirmation(role='dialog')
  div.modal-dialog
    div.modal-content
      div.modal-head
          h4.modal-body Jobs to be submitted
      div.modal-body
        p: span#job_preview
      div.modal-footer
        button.btn.btn-default#job_submit(data-dismiss="modal",type="button") Submit
        button.btn.btn-danger#job_cancel(data-dismiss="modal",type="button") Cancel

div.container-fluid
    div.row#filetrees
        div.col-md-5
            div.form_block#local_login_form
                h3 Login to access #{fs_server_local}
                div.hint #{fs_hint_login_local}
                form#login_form_local(class="form", method="post",action="#")
                    label Username :
                    input#username(type="text",name="username")
                    label Password :
                    input#password(type="password",name="password")
                    button.login_button#login_local(type="submit",name="login")
                        i.fa.fa-sign-in.fa-2x
            div.tree_block#filetree_local
            div.btn-group#action_local
                button.btn.btn-default#button_refresh_local
                    i.fa.fa-refresh
                button.btn.btn-default#button_logout_local
                    i.fa.fa-sign-out

        div.col-md-2
            div.action
                button.action_button#button_upload
                    i.fa.fa-upload &nbsp;Uplaod
            div.action
                button.action_button#button_download
                    i.fa.fa-download &nbsp;Download

        div.col-md-5
            div.form_block#remote_login_form
                h3 Login to access #{fs_server_remote}
                div.hint #{fs_hint_login_remote}
                form#login_form_remote(class="form", method="post",action="#")
                    label Username :
                    input#username(type="text",name="username")
                    label Password :
                    input#password(type="password",name="password")
                    button.login_button#login_remote(type="submit",name="login")
                        i.fa.fa-sign-in.fa-2x
            div.tree_block#filetree_remote
            div.btn-group#action_remote
                button.btn.btn-default#button_refresh_remote
                    i.fa.fa-refresh
                button.btn.btn-default#button_logout_remote
                    i.fa.fa-sign-out
